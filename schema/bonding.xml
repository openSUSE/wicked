<service name="bonding-factory" interface="org.opensuse.Network.Bond.Factory" object-class="netif-list">
  <method name="newDevice">
    <arguments>
     <name type="string"/>
     <config type="bonding:device-info">
      <meta:mapping document-node="/bond"/>
     </config>
    </arguments>
    <return>
     <string/>
    </return>
  </method>
</service>
